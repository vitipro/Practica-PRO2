#include "Cjt_idiomes.hh"
using namespace std;

int main() {
    Cjt_idiomes c;                                          
    c.llegir_conjunt();                                        // dentro tendra int n i Idioma I
    string opcio;
    while (opcio != fin) {
        if (opcio == "tabla_frec") {
            Idioma I;
            string id = I.nom;
            cin >> id;
            c.consultar_idioma(id).consultar_taula_freq();
        }
        if (opcio == "treecode") {
            Idioma I;
            string id = I.nom;
            cin >> id;
            c.consultar_idioma(id).escriure_treecode(I.treecode);
        }
        if (opcio == "codigos") {
            Idioma I;
            string id = I.nom;
            cin >> id;
            string s;
            cin >> s:
            if (s == "todos") c.consultar_idioma(id).consultar_codis();
            else c.consultar_idioma(id).consultar_codi_especific(s);
        }
        cin >> opcio;
    }
}
